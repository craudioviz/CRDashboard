FROM node:22

# Create app directory
WORKDIR /app

# Install system tools
RUN apt-get update && apt-get install -y jq mongodb-org-shell

# Copy files
COPY . .

# Install dependencies
RUN npm install

# Expose port
EXPOSE 4000

# Start server
CMD ["npm", "start"]

# Expose persona, analytics, dashboard routes
EXPOSE 3000
